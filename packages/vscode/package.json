{
  "name": "@drift/vscode",
  "version": "0.0.1",
  "private": true,
  "description": "VS Code extension for Drift",
  "displayName": "Drift - Architectural Drift Detection",
  "publisher": "drift",
  "type": "module",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [],
    "configuration": {}
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm run build",
    "package": "vsce package"
  },
  "dependencies": {
    "driftdetect-lsp": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
