# Drift Telemetry Worker Configuration
# Copy this to wrangler.toml and fill in your database_id
name = "drift-telemetry"
main = "src/index.ts"
compatibility_date = "2024-01-01"

# D1 Database binding
# Create with: npx wrangler d1 create drift-telemetry
[[d1_databases]]
binding = "DB"
database_name = "drift-telemetry"
database_id = "YOUR_DATABASE_ID_HERE"

# Optional: Custom domain
# routes = [
#   { pattern = "telemetry.yourdomain.com", custom_domain = true }
# ]

# Production environment
[env.production]
name = "drift-telemetry-prod"

# Staging environment  
[env.staging]
name = "drift-telemetry-staging"
